<article>
    <div class="login">
        <p class="text3">회원가입</p>
        
        <div class="actions col-12">
          <div class="row">
            <button id="facebook_btn" class="btn btn-lg btn-block mt-2"><%= image_tag "facebook-white.png", :class=> "fblogo" %><%= link_to '페이스북으로 간편하게 로그인!', user_facebook_omniauth_authorize_path, :id => "facebook_btn" %></button>
          </div>
        </div>
        
        <div class="text-center my-2">
          <p class="text4">또는</p>
        </div>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
        <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "이메일" %>
        </div>
         <div class="field">
        <%= f.password_field :password, class:"form-control", autocomplete: "off", placeholder: "비밀번호" %>
        </div>
        <div class="field">
        <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "off", placeholder: "비밀번호 확인" %>
        </div>
        <div class="field">
        <%= f.text_field :name, class:"form-control", autofocus: true, placeholder: "사용자 이름" %>
        </div>
        <div class="actions col-12">
          <div class="row">
            <button id="signup_btn" class="btn btn-lg btn-block"><%= f.submit "가입하기", id: 'signup_input' %></button>
          </div>
        </div>
        <% end %>
        <div class="row justify-content-between signchoice_btn">
          <div class="col-5 text-left">
            <%= link_to '로그인', new_user_session_path, :id => "text5" %>
          </div>
          <div class="col-6 text-right text5">
            <%= link_to '아이디/비밀번호 찾기', new_user_password_path, :id => "text5" %>
          </div>
        </div>
    </div>
</article>



